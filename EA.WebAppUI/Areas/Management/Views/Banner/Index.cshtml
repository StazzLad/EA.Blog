@using BLL.Abstract
@using DAL.Concrete
@using Entity
@using BLL
@using Entity.Entities
@model List<Header>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<div class="toolbar hidden-print mb-2">
    <div class="text-end">
        <a class="btn btn-primary" asp-area="Management" asp-controller="Banner" asp-action="Create">Add a New Banner</a>
    </div>
</div>
<div class="row">
    <div class="col-md-9 offset-md-2">
<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h4 class="mb-0">Banners</h4>
        </div>
        <hr />
        <div class="table-responsive">
            <table id="example1" class="table table-striped table-bordered " style="width:100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Image</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>

                            <td>
                                <img src="@item.ImageUrl" width="50" />
                            </td>

                            <td>
                                <a class="btn btn-warning" asp-area="Management" asp-controller="Banner" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        
                                <button type="button" class="btn-danger btn-delete" item id="@item.Id">Delete</button>
                                        
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Image</th>
                        
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
    </div>
</div>



@section Scripts {
    <script>
        //delete
        $(document).ready(function () {
            $(document).on('click', '.btn-delete', async function () {
                var elem = this;

                    $.ajax({
                        url: '/Management/Banner/Delete',
                        type: 'POST',
                        dataType: 'json',
                        data: { "id": elem.id },
                        success: function (e) {
                            $(elem).closest('tr').remove();
                            success_notification(e.message);
                        },
                        error: function (e) {
                            error_notification("Bir hata oluştu");
                        }
                    });


            });
        });
    </script>
}
}

